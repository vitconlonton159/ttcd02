@model List<ttcd02.Models.Product>

<h2>Danh Sách Sản Phẩm</h2>
<a asp-action="Create">Thêm Sản Phẩm Mới</a>

<table>
    <thead>
        <tr>
            <th>Tên Sản Phẩm</th>
            <th>Mô Tả</th>
            <th>Giá</th>
            <th>Số Lượng</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.Id">Chi Tiết</a> |
                    <a asp-action="Edit" asp-route-id="@product.Id">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
